<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp" >

    <LinearLayout
        android:id="@+id/lnrLayouts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/checkBoxModifier"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtModifierNameIndividual"
            style="@style/txtIndividualStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/modifier"
            android:layout_marginLeft="@dimen/space"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtModifirePrice"
            style="@style/txtIndividualStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="@string/total_order"
            android:textSize="16sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBoxModifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:clickable="false"
        android:layout_marginRight="@dimen/space"
        android:gravity="right" />
</RelativeLayout>