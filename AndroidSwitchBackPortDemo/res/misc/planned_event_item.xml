<?xml version="1.0" encoding="utf-8"?>
<com.azilen.insuranceapp.views.CustomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/tabiconheight"
    android:background="@android:color/transparent"
    android:fillViewport="true"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin"
    android:paddingTop="@dimen/margin" >

    <RelativeLayout
        android:id="@+id/relAllLayers"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:paddingBottom="@dimen/margin"
        android:background="@android:color/transparent" >

        <RelativeLayout
            android:id="@+id/relDetailPlannedEvent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin"
            android:background="@drawable/app_background" >

            <RelativeLayout
                android:id="@+id/relFirstLayer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:gravity="center_vertical" >

                <RelativeLayout
                    android:id="@+id/relLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/margin" >

                    <ImageView
                        android:id="@+id/videoImage"
                        android:layout_width="@dimen/video_width"
                        android:layout_height="@dimen/video_height_list_item"
                        android:background="@drawable/thumbnail"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:id="@+id/txtTitleOfGroup"
                        style="@style/txtStyleWhite"
                        android:layout_width="@dimen/video_width"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_title_drawable_blue"
                        android:gravity="center_horizontal"
                        android:text="@string/title_of_group"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="@dimen/small_font" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relVideoDetails"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_toRightOf="@+id/relLeft"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/txtTitleEvent"
                        style="@style/txtStyleWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/event_title"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/medium_font" />

                    <TextView
                        android:id="@+id/txtDate"
                        style="@style/txtStyleWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtTitleEvent"
                        android:layout_marginTop="@dimen/margin_top_row"
                        android:text="@string/date_time"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="@dimen/medium_font" />

                    <TextView
                        android:id="@+id/txtTime"
                        style="@style/txtStyleWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtDate"
                        android:layout_marginTop="@dimen/margin_top_row"
                        android:text="@string/date_time"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="@dimen/medium_font" />

                    <RelativeLayout
                        android:id="@+id/relUserDetails"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtTime"
                        android:layout_marginTop="@dimen/margin_top_row" >

                        <ImageView
                            android:id="@+id/userAvatar"
                            android:layout_width="@dimen/user_avatar_width"
                            android:layout_height="@dimen/user_avatar_height"
                            android:background="@drawable/profile_pic"
                            android:contentDescription="@string/app_name" />

                        <TextView
                            android:id="@+id/txtUserName"
                            style="@style/txtStyleWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_top_row"
                            android:layout_marginTop="@dimen/margin_top_row"
                            android:layout_toRightOf="@+id/userAvatar"
                            android:text="@string/name"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textSize="@dimen/medium_font" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relPlaceDetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relFirstLayer"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:gravity="right" >

                <TextView
                    android:id="@+id/txtPlaceLbl"
                    style="@style/txtStyleWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/place"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/medium_font" />

                <TextView
                    android:id="@+id/txtCityName"
                    style="@style/txtStyleWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_top_row"
                    android:layout_toRightOf="@+id/txtPlaceLbl"
                    android:text="@string/city_name"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="@dimen/medium_font" />

                <TextView
                    android:id="@+id/txtStreetName"
                    style="@style/txtStyleWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_top_row"
                    android:layout_toRightOf="@+id/txtCityName"
                    android:text="@string/street_name"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="@dimen/medium_font" />

                <RelativeLayout
                    android:id="@+id/relMap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtStreetName"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/margin_top_row"
                    android:background="@android:color/transparent"
                    android:visibility="visible" >
                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapview"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/map_view_height"
                        zOrderOnTop="true"
                        android:background="@android:color/transparent" >
                    </com.google.android.gms.maps.MapView>
                    <ImageView
                        android:id="@+id/imgTemp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/map_view_height"
                        android:layout_centerInParent="true"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/app_name" />

                    <ImageView
                        android:id="@+id/imgZoom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/search_icon"
                        android:clickable="true"
                        android:contentDescription="@string/app_name" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lnrSep"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relPlaceDetails"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginLeft="@dimen/header_height"
                android:layout_marginRight="@dimen/header_height"
                android:layout_marginTop="@dimen/margin"
                android:background="@drawable/line"
                android:orientation="horizontal" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relSecondLayer"
                android:layout_width="fill_parent"
                android:layout_height="65dip"
                android:layout_below="@+id/lnrSep"
                android:gravity="center" >

                <Button
                    android:id="@+id/btnReady"
                    style="@style/txtStyleWhite"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin"
                    android:background="@drawable/ready_button_selector" />

                <ImageButton
                    android:id="@+id/imgRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/btnReady"
                    android:background="@drawable/record_button_selector"
                    android:clickable="true"
                    android:contentDescription="@string/app_name" />
                
                <ImageButton
                	android:id="@+id/imgBtnPlay"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_marginLeft="@dimen/margin"
                	android:background="@drawable/play_button_selector"
                	android:clickable="true"
                	android:layout_centerVertical="true"
                	android:layout_toRightOf="@+id/imgRecord"
                	android:contentDescription="@string/app_name" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</com.azilen.insuranceapp.views.CustomScrollView>