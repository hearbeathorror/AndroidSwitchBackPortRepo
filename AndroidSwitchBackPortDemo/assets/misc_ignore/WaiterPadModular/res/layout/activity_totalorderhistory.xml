<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout 
        android:id="@+id/relHeaderMyHistory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <include 
            android:layout_alignParentTop="true"
            layout="@layout/layout_header"/>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/relDetails"
        android:layout_width="fill_parent"
        android:layout_below="@+id/relHeaderMyHistory"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtTapToRefresh"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/txtIndividualStyle"
            android:clickable="true"
            android:onClick="txtClicked"
            android:text="@string/tap_to_refresh"
            android:gravity="center_horizontal"
            android:background="@color/silver"
            android:padding="15dp"/>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/silver"
            android:id="@+id/lnr"
            android:orientation="horizontal"
            android:layout_below="@+id/txtTapToRefresh"></LinearLayout>
        <ListView 
        	android:id="@android:id/list"
        	android:layout_width="fill_parent"
        	android:layout_below="@+id/lnr"
        	android:layout_height="wrap_content"
        	android:divider="@color/silver"
        	android:cacheColorHint="@android:color/transparent"
        	android:dividerHeight="2dp"></ListView>
    </RelativeLayout>
</RelativeLayout>